<main class="container">
  <h1 id="hey">hola</h1>

  <section class="search">

    <h3>Searh for an existing report:</h3>  
    <form action="/getReport">
      <div class="form-row">
          <div class="col-4">
            <select name="name" class="form-control">
              <option>Employee name</option>
              {{#each employees}}
                <option>{{this.name}}</option>
              {{/each}}
            </select> 
          </div> 

          <div class="col-3">
            <select name="year" class="form-control" id="year-list">
              <option>year</option>
                 {{!-- here comes option tags with the same year set as id and innerHTML from optionDate.js script --}}
             </select>  
          </div> 

          <div class="col-3">
            <select name="month" class="form-control" id="month-list">
              <option>month</option>
                {{!-- here comes option tags with the same month set as id and innerHTLM from optionDate.js script --}}
            </select> 
          </div>

         <button type="submit" class="btn btn-outline-secondary col-2">Search</button>

      </div>
     
    </form>
  </section>


  <section class="set-data">

    <h3>Start a new report:</h3>

    <form action="/addDailyReport" method="POST"></form>
      <div class="form-row justify-content-around">

        <div class="col-5">

          <div class="form-group">
            <label for="name-list">Employee name:</label>
            <select name="name" class="form-control" id="name-list">
              <option>Select</option>
              {{#each employees}}
                <option>{{this.name}}</option>
              {{/each}}
            </select> 
          </div>

          <div class="form-group">
            <label for="year-list">Select year:</label> 
              <select name="year" class="form-control" id="year-list">
                <option>Select</option>
                  {{!-- here comes option tags with the same year set as id and innerHTML from optionDate.js script --}}
              </select>     
          </div>

          <div class="form-group">
            <label>Select month:</label>
            <select name="month" class="form-control" id="month-list">
              <option>Select</option>
                  {{!-- here comes option tags with the same month set as id and innerHTLM from optionDate.js script --}}
            </select>   
          </div>

          <div class="form-group">
            <label for="day-list">Select a day:</label>
            <select name="day" class="form-control" id="day-list">
                <option>Select</option>
                {{!-- here comes option tags with the same day set as id and innerHTML from optionDate.js script --}}
            </select> 
          </div>

        </div>

        <div class="col-5">
         
          <fieldset class="form-group">
            <legend class="col-form-label pt-0">Meal:</legend>  
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="meal" id="meal-yes" value="option1">
              <label class="form-check-label" for="meal-yes">yes</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="meal" id="meal-no" value="option2" checked>
              <label class="form-check-label" for="meal-no">no</label>
            </div>
          </fieldset>

          <div class="form-group">
            <label for="transportation-input">Transportation:</label>
            <input name="transportation" type="text" class="form-control" id="transportation-input" placeholder="Enter kilometers (e.g. 7)">
          </div>

          <div class="form-group">
            <label for="parking-input">Parking:</label>
            <input name="parking" type="text" class="form-control" id="parking-input" placeholder="Enter parking expenses in $ (e.g. 25)">
          </div>

          <button type="submit" class="btn btn-primary mb-2">Save</button>
        </div>

      </div>
    </form>
    


  </section>



    {{#if message }}
      <div class="error-message">
        <h5>{{ message }}</h5>
        <a href="/" class="btn btn-dark">Ok, I've goot it!</a>
        </div>
    {{/if}}

</main>